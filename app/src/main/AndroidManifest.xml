<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="techwork.ami"
    android:installLocation="auto">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    -
    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/titleActivityRegister"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RestorePassActivity"
            android:label="@string/titleActivityRestorePass"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/titleActivityEditProfile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AfterLoginActivity"
            android:label="@string/titleActivityAfterLogin"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBqz3kiAPD6gFdPjo71dAHIEnx0VUnqEmg" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/titleActivityExploreOffers"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Need.NeedActivity"
            android:label="@string/titleActivityExploreOffers"
            android:theme="@style/AppTheme" />
        <activity android:name=".Category.CategoryView" />
        <activity android:name=".Offer.OfferView" />
        <activity android:name=".Need.NeedOffer.NeedOfferActivity" />
        <activity android:name=".Need.NeedOffer.NeedOfferViewActivity" />
        <activity
            android:name=".ReservationsOffers.MyReservationsOffersActivity"
            android:label="@string/title_activity_my_reservations"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ContactUsActivity" />
        <activity android:name=".Need.NeedOffer.ViewLocalDetails" />
    </application>

</manifest>