<android.support.v7.widget.CardView
    android:id="@+id/need_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/tv_need_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Título de necesidad"
            android:layout_marginBottom="2dp"
            />

        <View
            android:id="@+id/separetor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#afafaf"
            android:layout_below="@id/tv_need_tittle"
            />

        <TextView
            android:id="@+id/tv_need_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Descripción del pedido"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tv_need_tittle"
            />

        <TextView
            android:id="@+id/tv_need_company_needs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ofertas recibidas:"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tv_need_description"
            />
        <TextView
            android:id="@+id/tv_need_company_needs_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ofertas descartadas:"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tv_need_company_needs"
            />

        <TextView
            android:id="@+id/tv_need_company_needs_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@android:color/white"
            android:text="N"
            android:layout_below="@+id/tv_need_description"
            android:layout_marginStart="5dp"
            android:background="@drawable/price_square_background"
            android:layout_toEndOf="@+id/tv_need_company_needs"
            />
        <TextView
            android:id="@+id/tv_need_company_needs_number_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@android:color/white"
            android:text="N"
            android:layout_below="@+id/tv_need_company_needs_number"
            android:layout_marginStart="5dp"
            android:background="@drawable/price_square_background"
            android:layout_toEndOf="@+id/tv_need_company_needs_discard"
            />

        <TextView
            android:id="@+id/tv_need_price_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Mínimo"
            android:textColor="#f45151"
            android:layout_below="@+id/tv_need_description"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_need_date_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Exp"
            android:layout_below="@+id/tv_need_price_min"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>