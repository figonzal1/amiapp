<android.support.v7.widget.CardView

    android:id="@+id/my_reservations_offers_list_card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/cardCornerRadius"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Width y height dan el tamaño de la foto (ImageView)-->
        <ImageView
            android:id="@+id/my_reservations_offers_list_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu_camera"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/my_reservations_offers_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Titulo Oferta"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/my_reservations_offers_list_photo"/>

        <TextView
            android:id="@+id/my_reservations_offers_list_final_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha término"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/my_reservations_offers_list_title"
            android:layout_toEndOf="@+id/my_reservations_offers_list_photo"/>

        <TextView
            android:id="@+id/my_reservations_offers_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#99ff0000"
            android:text="Precio"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/my_reservations_offers_list_final_date"
            android:layout_toEndOf="@+id/my_reservations_offers_list_photo"/>

        <TextView
            android:id="@+id/my_reservations_offers_list_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compañía"
            android:textSize="16sp"
            android:layout_below="@+id/my_reservations_offers_list_price"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/my_reservations_offers_list_photo"/>

        <TextView
            android:id="@+id/my_reservations_offers_list_reservation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compañía"
            android:textSize="16sp"
            android:layout_below="@+id/my_reservations_offers_list_company"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/my_reservations_offers_list_photo"/>

        <TextView
            android:id="@+id/my_reservations_offers_list_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Cantidad"
            android:textSize="16sp"
            android:layout_below="@+id/my_reservations_offers_list_reservation_date"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/my_reservations_offers_list_photo"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
