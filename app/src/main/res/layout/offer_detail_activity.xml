<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="techwork.ami.Offer.OfferDetail.OfferDetailActivity">
    <!--android:scrollbarStyle="outsideInset"-->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/od_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_offer_detail"
            android:clickable="true"
            app:fabSize="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/image_default"
            android:layout_margin="@dimen/fab_margin"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="?android:attr/actionBarSize"
        android:id="@+id/swipe_refresh_offer_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/offer_cv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp" />

                <TextView
                    android:text="@string/offer_cv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_company"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="15sp" />

                <TextView
                    android:text="@string/offer_cv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_description"
                    android:layout_below="@+id/od_tv_company"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:textStyle="normal|italic" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/recycler_view_offer_detail"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/od_tv_tprice_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_tprice_txt"
                    android:layout_marginStart="7dp"
                    android:layout_alignBaseline="@+id/od_tv_price_txt"
                    android:layout_alignBottom="@+id/od_tv_price_txt"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/od_tv_dsct_txt"
                    android:text="@string/od_tv_dsct_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/od_tv_price_txt"
                    android:layout_alignBottom="@+id/od_tv_price_txt"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/od_tv_dsct"
                    android:text="@string/od_tv_dsct_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/od_tv_tprice"
                    android:layout_alignBottom="@+id/od_tv_tprice"
                    android:layout_alignStart="@+id/od_tv_dsct_txt" />

                <TextView
                    android:text="@string/od_tv_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_price_txt"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="@string/od_tv_tprice_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_tprice"
                    android:layout_marginTop="31dp"
                    android:layout_below="@+id/od_tv_tprice_txt"
                    android:layout_alignStart="@+id/od_tv_tprice_txt" />

                <TextView
                    android:text="@string/od_tv_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_price"
                    android:layout_alignBaseline="@+id/od_tv_dsct"
                    android:layout_alignBottom="@+id/od_tv_dsct"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="@string/od_tv_rd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/od_tv_rd"
                    android:layout_marginTop="31dp"
                    android:layout_below="@+id/od_tv_dsct"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>