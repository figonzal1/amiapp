<android.support.v7.widget.CardView

    android:id="@+id/offer_card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <!-- Width y height dan el tamaño de la foto (ImageView)-->

        <ImageView
            android:id="@+id/offer_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_menu_camera"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/offer_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título oferta"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_alignTop="@+id/offer_photo"
            android:layout_toEndOf="@+id/offer_photo"
            android:layout_marginStart="11dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Descuento"
            android:textSize="14sp"
            android:textColor="#99ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offer_dsct"
            android:layout_above="@+id/offer_description"
            android:layout_alignEnd="@+id/offer_price" />

        <TextView
            android:id="@+id/offer_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compañia"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/offer_photo"
            android:layout_alignStart="@+id/offer_description" />

        <TextView
            android:id="@+id/offer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:text="Precio"
            android:layout_marginEnd="11dp"
            android:layout_alignBaseline="@+id/offer_company"
            android:layout_alignBottom="@+id/offer_company"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/offer_description"
            android:layout_width="wrap_content"
            android:text="Descripción"
            android:textSize="14sp"
            android:gravity="center|left"
            android:layout_height="wrap_content"
            android:textStyle="normal|italic"
            android:layout_below="@+id/offer_tittle"
            android:layout_alignStart="@+id/offer_tittle"
            android:layout_above="@+id/offer_company"
            android:layout_alignEnd="@+id/offer_dsct" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
