<android.support.v7.widget.CardView
    android:id="@+id/offer_detail_card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardView_relativeLayout_padding"
        android:background="?android:attr/selectableItemBackground"
        >

        <!-- Width y height dan el tamaño de la foto (ImageView)-->
        <ImageView
            android:id="@+id/offer_detail_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_menu_camera"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/offer_detail_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Título Producto"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/offer_detail_photo"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/offer_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="15sp"
            android:layout_alignStart="@+id/offer_detail_tittle"
            android:layout_below="@+id/offer_detail_tittle"
            android:layout_above="@+id/offer_detail_price"
            android:layout_alignEnd="@+id/offer_detail_price"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/offer_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="XX x Precio c/u"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@+id/offer_detail_photo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp" />

        <!--<TextView
            android:id="@+id/offer_detail_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Compañia"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
        -->
    </RelativeLayout>

</android.support.v7.widget.CardView>
