<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".Need.NeedOfferDetails.NeedOfferViewActivity">

    <RelativeLayout
        android:id="@+id/need_offer_view_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_need_offer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de la oferta:"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textSize="25sp"/>

        <View
            android:id="@+id/separator_need_offer_view"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="1dp"
            android:background="#afafaf"
            android:layout_below="@id/tv_need_offer_view"
            />

        <LinearLayout
            android:id="@+id/need_offer_view_linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/separator_need_offer_view"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_need_offer_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oferta enviada por: "
                android:layout_weight="5"
                android:textStyle="italic"
                android:gravity="center_horizontal"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/tv_need_offer_view_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:background="@drawable/need_offer_company_square_background"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_need_offer_view_tittle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo Oferta Empresa"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="23sp"
            android:layout_below="@+id/need_offer_view_linear_layout1"/>

        <TextView
            android:id="@+id/tv_need_offer_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Esta es la descripcion de la oferta de la empresa XX"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/tv_need_offer_view_tittle"
            />


        <LinearLayout
            android:id="@+id/need_offer_view_linear_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tv_need_offer_view_description">

            <TextView
                android:id="@+id/tv_need_offer_view_date_ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Fecha de publicación: XX/XX/XX" />
            <TextView
                android:id="@+id/tv_need_offer_view_date_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Fecha de expiración: XX/XX/XX" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_need_offer_view_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$XX.XX"
            android:gravity="center_horizontal"
            android:textSize="23dp"
            android:textColor="#ff6565"
            android:layout_toEndOf="@+id/need_offer_view_linear_layout2"
            android:layout_below="@+id/tv_need_offer_view_description"/>

        <TextView
            android:id="@+id/tv_need_offer_view_3"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Esta oferta contiene: "
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/tv_need_offer_view_price"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_need_offer_view"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_need_offer_view_3"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_need_offer_view_max_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text="¡Puedes reservar hasta X unidades!"
            android:layout_below="@+id/recycler_view_need_offer_view"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_need_offer_view_max_person">

            <Button
                android:id="@+id/btn_need_offer_view_accept"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:background="@drawable/check"
                />
            <Button
                android:id="@+id/btn_need_offer_view_discard"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/not_check"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
