<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_local_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techwork.ami.Need.NeedOfferLocalDetails.NeedOfferViewLocalActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textSize="27sp"
                android:text="¡Felicitaciones! \n Has realizado la reserva"/>

            <ImageView
                android:id="@+id/iv_local"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/logo_ami"
                android:layout_below="@id/tv_local" />


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="#Dirección local, Comuna"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:layout_below="@+id/iv_local"
                />

            <TextView
                android:id="@+id/tv_web1"
                android:layout_marginTop="10dp"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Más información en"
                android:layout_below="@+id/tv_address"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_web2"
                android:textSize="23sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wwww.webempresa.com"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_web1"
                android:gravity="center_horizontal"
                android:autoLink="web"
                />

            <Button
                android:id="@+id/btn_local_street_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver StreetView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_below="@id/tv_web2"/>

            <Button
                android:id="@+id/btn_mis_pedidos_reservados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis pedidos reservados"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_local_street_view"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
