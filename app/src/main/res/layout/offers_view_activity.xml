<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Need.NeedOfferDetails.NeedOfferViewActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/offer_view_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">


            <LinearLayout
                android:id="@+id/offer_view_linear_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="10">

                <!-- Oferta enviada por -->
                <TextView
                    android:id="@+id/tv_offer_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OfferViewOfferSendFor"
                    android:layout_weight="5"
                    android:textStyle="italic"
                    android:gravity="center_horizontal"
                    android:textSize="19sp"/>

                <!-- Nombre empresa -->
                <TextView
                    android:id="@+id/tv_offer_view_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OfferViewCompany"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/need_offer_company_square_background"
                    />
            </LinearLayout>


            <!-- Titulo Oferta Empresa -->
            <TextView
                android:id="@+id/tv_offer_view_tittle"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OfferViewTittle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="23sp"
                android:layout_below="@+id/offer_view_linear_layout1"/>

            <!-- Descripcion -->
            <TextView
                android:id="@+id/tv_offer_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/OfferViewDescription"
                android:textStyle="italic"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/tv_offer_view_tittle"
                />


            <LinearLayout
                android:id="@+id/offer_view_linear_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/tv_offer_view_description">

                <TextView
                    android:id="@+id/tv_offer_view_date_ini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="@string/OfferViewDateIni" />
                <TextView
                    android:id="@+id/tv_offer_view_date_fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="@string/OfferViewDateFin" />

            </LinearLayout>

            <!-- Precio de la oferta -->
            <TextView
                android:id="@+id/tv_offer_view_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OfferViewPrice"
                android:gravity="center_horizontal"
                android:textSize="23sp"
                android:textColor="#ff6565"
                android:layout_toEndOf="@+id/offer_view_linear_layout2"
                android:layout_below="@+id/tv_offer_view_description"/>

            <!-- Esta oferta contiene -->
            <TextView
                android:id="@+id/tv_offer_view_3"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="@string/OfferViewProducts"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/tv_offer_view_price"/>

            <!-- Listado de productos -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_offer_view"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_offer_view_3"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

            <!-- Maximo por personas -->
            <TextView
                android:id="@+id/tv_offer_view_max_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="@string/OfferViewMaxPerson"
                android:layout_below="@+id/recycler_view_offer_view"/>

            <!-- number picker de unidades -->
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                app:np_dividerColor="@color/colorAccent"
                app:np_textColor="@color/colorPrimary"
                app:np_textSize="23sp"
                app:np_orientation="horizontal"
                app:np_dividerDistance="70dp"
                android:layout_below="@id/tv_offer_view_max_person"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/number_picker"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_offer_view_accept"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/check"
                    />
                <Button
                    android:id="@+id/btn_offer_view_discard"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/not_check"
                    />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
